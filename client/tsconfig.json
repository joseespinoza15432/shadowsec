{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      },
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }